<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/Button.Primary</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>

        <!-- For the resting Spinner style -->
        <item name="android:spinnerItemStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="android:spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>

    </style>

    <!--========= Button Styles =========-->

    <style name="ButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="WarningButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/app_orange</item>
    </style>

    <style name="DestructiveButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/app_red</item>
    </style>

    <style name="DisabledButtonTheme" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/app_btn_disabled</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingStart">48dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name ="android:paddingBottom">12dp</item>
    </style>

    <style name="Button.Primary">
        <item name="android:background">@drawable/all_button_large</item>
        <item name="android:textAppearance">@style/CardHeading.Light</item>
    </style>
    
    <style name="Button.Secondary">
        <item name="android:background">@drawable/all_button_large_outline</item>
        <item name="android:textAppearance">@style/CardHeading</item>
    </style>



    <!--========= Spinner Styles =========-->

    <style name="spinnerItemStyle" parent="Label">
        <item name="android:paddingBottom">4dp</item>
        <item name="android:gravity"></item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="Label">
        <item name="android:layout_alignParentEnd">true</item>

    </style>


    <!--========= Font Styles =========-->
    <style name="BigHero" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">48sp</item>
    </style>

    <style name="BigHero.Black">
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="SmallHero" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SmallHero.White">
        <item name="android:textColor">@color/app_white</item>
    </style>

    <style name="Heading" parent="@android:style/TextAppearance">
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="Heading.Large">
        <item name="android:textSize">48sp</item>
    </style>

    <style name="Subheading" parent="@android:style/TextAppearance">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/app_black</item>
    </style>

    <style name="Label" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">#828282</item>
    </style>

    <style name="Label.Light">
        <item name="android:textColor">#FDFDFD</item>
    </style>

    <style name="Label.Small" parent="@android:style/TextAppearance">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">#757478</item>
    </style>

    <style name="CardHeading" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/opensans_semibold</item>
        <item name="android:textColor">#313131</item>
    </style>

    <style name="CardHeading.Light">
        <item name="android:textColor">#FDFDFD</item>
    </style>
    
    <style name="Body.Large" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">@color/app_black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Body" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:textColor">#313131</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Body.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757478</item>
    </style>


</resources>
